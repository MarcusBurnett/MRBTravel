<% include ../partials/header %>

<div class="container formContainer">
    <div class="row">
        <h1 style="text-align: center">Edit <%= destination.name %></h1>
        <div class="sizeForm">
            <form action="/destinations/<%= destination._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="destination[name]" value="<%= destination.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea  class="form-control" type="text" name="destination[description]"><%= destination.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location"
                        value="<%= destination.location %>">
                </div>

                <div class="form-group">
                    <button class="formBtn btn btn-lg btn-block">Submit</button>
                </div>
            </form>

        </div>
    </div>
</div>

<% include ../partials/footer %>