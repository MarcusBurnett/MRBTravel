<% include ../partials/header %>
<div class="formContainer">
    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit Comment</h1>
            <div class="form">
                <form action="/destinations/<%= destination_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" type="text" name="comment[text]"><%= comment.text %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-block formBtn">Submit</button>
                    </div>
                </form>
                <a href="/destinations">Back</a>

            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>